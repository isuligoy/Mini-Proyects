---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        color: white;
        text-decoration: none;
    }

    :root {
        /* Modificar */
        --card-color: hsl(222, 57%, 36%);
        --card-color-light: hsl(227, 49%, 21%);
        --highlight: hsl(345, 40%, 63%);
        --baner-color: hsl(300, 9%, 96%);
        --black: #000211 /* --black: hsl(27, 10%, 17%); */;
    }
    body {
        font-family: system-ui, sans-serif;
        background: var(--black);
    }

    ::-webkit-scrollbar {
        width: 10px;
    }

    ::-webkit-scrollbar-track {
        background: #23232c;
    }

    ::-webkit-scrollbar-thumb {
        background: #f9f4f4;
        border-radius: 5px;
    }
</style>
