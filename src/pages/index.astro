---
import Layout from "@/layouts/Layout.astro";
import { projects } from "@/../json/projects.json";
---

<Layout title="Projects">
    <h1>Projects</h1>
    <main class="link-card-grid">
        <a href="/projects/01-Navbar/index.html">
            <article class="link-card">
                <div>1</div>
                <h2>Nombre Proyecto</h2>
            </article>
        </a>
        <a href="/projects/02-Cart-Shopping/index.html">
            <article class="link-card">
                <div>2</div>
                <h2>Nombre Proyecto</h2>
            </article>
        </a>
        <a href="">
            <article class="link-card">
                <div>3</div>
                <h2>Nombre Proyecto</h2>
            </article>
        </a>
    </main>
</Layout>

<style is:global>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        color: white;
        text-decoration: none;
    }
    main {
        font-size: 20px;
        padding: 1rem;
        margin: auto;
        width: 1250px;
        max-width: calc(100% - 2rem);
    }
    h1 {
        background: #8e8e8e;
        padding: 2rem 0;
        font-size: 4rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
        padding: 0;

        & .link-card {
            display: flex;
            background: hsl(54, 100%, 42%);
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            cursor: pointer;

            &:hover {
                background: hsl(54, 100%, 32%);
            }
        }

        & .link-card > h2,
        .link-card > div {
        }

        & .link-card > h2 {
            font-size: 1.4rem;
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }

        .link-card > div {
            font-size: 1rem;
            font-weight: bold;
            background-color: hsl(0, 56%, 57%);
            border-radius: 15px;
            padding: 0.8rem 1rem;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }
</style>
